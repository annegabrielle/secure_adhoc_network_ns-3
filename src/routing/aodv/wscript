## -*- Mode: python; py-indent-offset: 4; indent-tabs-mode: nil; coding: utf-8; -*-

def build(bld):
    module = bld.create_ns3_module('aodv', ['internet-stack', 'contrib'])
    module.includes = '.'
    module.source = [
        'aodv-id-cache.cc',
        'aodv-dpd.cc',
        'aodv-rtable.cc',
        'aodv-rqueue.cc',
        'aodv-packet.cc',
        'aodv-neighbor.cc',
        'aodv-routing-protocol.cc',
        'aodv-test-suite.cc',
        'test/aodv-regression.cc',
        'test/bug-772.cc',
        'test/loopback.cc',
        ]

    headers = bld.new_task_gen('ns3header')
    headers.module = 'aodv'
    headers.source = [
        'aodv-id-cache.h',
        'aodv-dpd.h',
        'aodv-rtable.h',
        'aodv-rqueue.h',
        'aodv-packet.h',
        'aodv-neighbor.h',
        'aodv-routing-protocol.h',
        ]

